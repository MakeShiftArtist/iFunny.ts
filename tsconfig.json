{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"pretty": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"stripInternal": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
